generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ChatMessage {
  id               String     @id
  threadId         String
  content          String
  sender           Sender
  inputTokenUsage  Int        @default(0)
  outputTokenUsage Int        @default(0)
  cost             Float      @default(0)
  modelName        String?
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @default(now())
  ChatThread       ChatThread @relation(fields: [threadId], references: [id])
}

model ChatThread {
  id                String              @id
  createdAt         DateTime            @default(now())
  status            ThreadStatus        @default(ACTIVE)
  channels          ChannelType         @default(SMS)
  goal              String
  userId            String
  destination       String
  type              ChannelType
  ChatMessage       ChatMessage[]
  StockfishResponse StockfishResponse[]
}

model User {
  id            String    @id
  name          String
  email         String    @unique
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  accounts      Account[]
  sessions      Session[]

  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String    @unique
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime
  requirements          String[]
  tones                 String[]
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model StockfishResponse {
  id         String     @id
  response   String
  createdAt  DateTime   @default(now())
  isBest     Boolean    @default(false)
  modelName  String
  responseId String
  threadId   String
  ratio      Float      @default(-1)
  ChatThread ChatThread @relation(fields: [threadId], references: [id])
}

enum Sender {
  USER
  ASSISTANT
}

enum ChannelType {
  SMS
  VOICE
  EMAIL
}

enum ThreadStatus {
  ACTIVE
  INACTIVE
  COMPLETED
}
